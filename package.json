{
  "scripts": {
    "start": "concurrently npm:watch:*",
    "watch:tw": "npx tailwindcss -i ./assets/css/input.css -o ./assets/css/output.css --watch",
    "watch:hugo": "hugo server --disableFastRender",
    "build": "npx tailwindcss -i ./assets/css/input.css -o ./assets/css/output.css && hugo --minify"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "daisyui": "^4.11.1",
    "tailwindcss": "^3.4.3"
  }
}
